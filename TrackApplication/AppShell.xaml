<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrackApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrackApplication"
    xmlns:employeeviews="clr-namespace:TrackApplication.Views.Employees"
    xmlns:itsupportviews="clr-namespace:TrackApplication.Views.ItSupports"
    xmlns:ticketviews="clr-namespace:TrackApplication.Views.Tickets"
    xmlns:assignmentviews="clr-namespace:TrackApplication.Views.Assignments"
    Title="TrackApplication">
    
    <!--
    To add file to routes, take the files namespace and save it as xmlns:name="clr-namespace:namespace"
    -->

    <TabBar>
        <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage"/>

        <ShellContent
        Title="Employee Page"
        ContentTemplate="{DataTemplate employeeviews:EmployeePage}" 
        Route="EmployeePage"/>

        <ShellContent
        Title="It Support Page"
        ContentTemplate="{DataTemplate itsupportviews:ItSupportPage}" 
        Route="ItSupportPage"/>

        <ShellContent
        Title="Ticket Page"
        ContentTemplate="{DataTemplate ticketviews:TicketPage}" 
        Route="TicketPage"/>

        <ShellContent
        Title="Assignment Page"
        ContentTemplate="{DataTemplate assignmentviews:AssignmentPage}" 
        Route="AssignmentPage"/>


    </TabBar>

</Shell>
