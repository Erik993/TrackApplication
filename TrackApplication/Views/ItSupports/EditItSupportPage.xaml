<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackApplication.Views.ItSupports.EditItSupportPage"
             Title="EditItSupportPage">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Edit an IT Support" FontSize="24" HorizontalOptions="Center"/>

        <Entry Placeholder="Name" Text="{Binding EditUserName, Mode=TwoWay}"/>
        <Entry Placeholder="Email" Text="{Binding EditEmail, Mode=TwoWay}"/>
        <Switch IsToggled="{Binding EditIsActive}"/>
        <Picker Title="Select Specialization"  ItemsSource="{Binding Roles}" SelectedItem="{Binding EditSpecialization, Mode=TwoWay}"></Picker>

        <Button Text="Update Employee" Command="{Binding UpdateItSupportCommand}"/>
        <Button Text="Go Back to Employees Page" Clicked="GoBackToItSupportShowPageClicked"/>
    </VerticalStackLayout>
    
</ContentPage>