<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackApplication.Views.ItSupports.AddItSupportPage"
             Title="AddItSupportPage">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Add New ItSupport" FontSize="24" HorizontalOptions="Center"/>

        <Entry Placeholder="Name" Text="{Binding NewUserName, Mode=TwoWay}"/>
        <Entry Placeholder="Email" Text="{Binding NewEmail, Mode=TwoWay}"/>
        <Switch IsToggled="{Binding NewIsActive}"/>
        <!--<Picker /> TODO: AddBinding to select the role -->

        <Button Text="Save IT Support" Command="{Binding AddItSupportCommand}"/>
        <Button Text="Go Back to ItSupport Page" Clicked="GoBackToItSupportPageClicked"/>
    </VerticalStackLayout>
    
</ContentPage>