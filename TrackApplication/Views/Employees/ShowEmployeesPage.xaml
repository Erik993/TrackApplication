<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackApplication.Views.Employees.ShowEmployeesPage"
             x:Name="ShowEmplPage"
             Title="ShowEmployeesPage">
    <!--x:name is used in delete function-->


    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">

            <Button Text="Back"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Clicked="GoToBackToEmployeePageButtonClicked"/>

            <CollectionView ItemsSource="{Binding Employees}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="4" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8"
                                Padding="30"
                                BackgroundColor="FloralWhite">
                            <VerticalStackLayout Spacing="4">

                                <Label Text="{Binding UserName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Email}" FontSize="14" />
                                <Label Text="{Binding IsActive, StringFormat='Active: {0}'}"
                                       FontSize="12" TextColor="Green" />
                                <Label Text="{Binding ContractDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>

                                <Button Text="Delete"
                                        BackgroundColor="BurlyWood"
                                        TextColor="Black"
                                        Command="{Binding BindingContext.DeleteEmployeeCommand, Source={x:Reference ShowEmplPage}}"
                                        CommandParameter="{Binding .}" />

                                <Button Text="Edit"
                                        Clicked="GoToEditEmployeePageButtonClicked" />

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>